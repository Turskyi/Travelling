<?xml version="1.0" encoding="utf-8"?>
<!-- The android: opacity = ”opaque” attribute is extremely important
 to prevent black flashes when moving to main theme. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">
    <item android:drawable="@drawable/bg_launch_screen" />
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher_round" />
    </item>
</layer-list>