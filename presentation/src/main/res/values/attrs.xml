<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShadowedLinearLayout">
        <attr name="containerBackgroundColor" format="color" />
        <attr name="shadowRadius" format="dimension" />
        <attr name="shadowColor" format="color" />
        <attr name="containerElevation" format="dimension" />
        <attr name="shadowGravity" format="string" />
        <attr name="shadowMarginTop" format="dimension" />
        <attr name="shadowMarginStart" format="dimension" />
        <attr name="shadowMarginEnd" format="dimension" />
        <attr name="shadowMarginBottom" format="dimension" />
        <attr name="scaleViewOnElevationChange" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ResizableTextView">
        <attr name="text_type" format="enum">
            <enum name="title" value="2" />
            <enum name="caption" value="1" />
            <enum name="body" value="0" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CollapsingToolbarLayoutExtension">
        <attr name="maxLines" format="integer" />
        <attr name="lineSpacingExtra" format="float" />
        <attr name="lineSpacingMultiplier" format="float" />
    </declare-styleable>

    <declare-styleable name="ExpandableSearchBar">

        <!-- ExpandableSearchBar Base Attributes-->
        <attr name="isRounded" format="boolean" />
        <!-- API 21+ , Will Revert To Default Shape On Lower-->
        <attr name="autoCollapse" format="boolean" />
        <attr name="searchBarBackgroundColor" format="color" />
        <attr name="searchBarBackgroundColorFocused" format="color" />
        <attr name="searchBarElevation" format="dimension" />
        <attr name="searchBarCornerRadius" format="dimension" />

        <!-- ExpandableSearchBar Icons Attributes -->
        <attr name="searchIconDrawable" format="reference" />
        <attr name="backIconDrawable" format="reference" />
        <attr name="clearIconDrawable" format="reference" />
        <attr name="searchIconTint" format="color" />
        <attr name="backIconTint" format="color" />
        <attr name="clearIconTint" format="color" />

        <!-- ExpandableSearchBar Text Attributes -->
        <attr name="textColor" format="color" />
        <attr name="hint" format="string" />
        <attr name="hintColor" format="color" />

    </declare-styleable>
</resources>