<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- App theme without action bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom AppTheme.Launcher. Sets your drawable as background in splash screen. -->
    <style name="AppTheme.Launcher">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@drawable/bg_launch_screen</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/offset_4</item>
        <item name="android:paddingEnd">@dimen/offset_4</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/offset_40</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="LinearLayoutForListItemStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/offset_4</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_margin">@dimen/offset_4</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawablePadding">@dimen/offset_4</item>
        <item name="android:layout_weight">9</item>
        <item name="android:padding">@dimen/offset_4</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/offset_4</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/headline_6</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
